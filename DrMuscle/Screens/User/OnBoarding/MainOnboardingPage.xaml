<?xml version="1.0" encoding="utf-8" ?>
<CarouselPage xmlns="http://xamarin.com/schemas/2014/forms"
              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              x:Class="DrMuscle.Screens.User.OnBoarding.MainOnboardingPage"
              >


    <ContentPage>

        <AbsoluteLayout 
            >

            <ContentView 
                Padding="0, 0" 
                AbsoluteLayout.LayoutBounds="0,0,1,1" 
                AbsoluteLayout.LayoutFlags="All">

                <StackLayout 
                    Margin="0, 0, 0, 0"
                    >


                    <Image
                        Source="page"
                        VerticalOptions="FillAndExpand"
                        Aspect="AspectFill"
                        />

                </StackLayout>

            </ContentView>

            <ContentView 
                Padding="0" 
                AbsoluteLayout.LayoutBounds="0,0,1,10" 
                AbsoluteLayout.LayoutFlags="All"
                >

                <StackLayout>
                    
                    <StackLayout
                        Orientation="Vertical"
                        HorizontalOptions="CenterAndExpand"
                        >

                        <StackLayout 
                            Margin="0, 20, 0, 0"
                            Orientation="Horizontal"
                            HorizontalOptions="FillAndExpand"
                            >

                            <Frame 
                                Padding="0"
                                HeightRequest="10"
                                WidthRequest="10"
                                BackgroundColor="#60B5F9"
                                CornerRadius="10"
                                />

                            <Frame 
                                Padding="0"
                                HeightRequest="10"
                                WidthRequest="10"
                                BackgroundColor="#f2f2f2"
                                CornerRadius="10"
                                />


                        </StackLayout>

                    </StackLayout>

                    <StackLayout
                    HorizontalOptions="CenterAndExpand"
                    Margin="0, 15, 0, 0"
                    >

                        <StackLayout
                        Margin="0, 30, 0, 0"
                        >

                            <Image
                            WidthRequest="140"
                            HeightRequest="140"
                            Aspect="AspectFill"
                            Source="logo1.png"/>

                        </StackLayout>


                    </StackLayout>

                    <StackLayout
                        Orientation="Vertical"
                         HorizontalOptions="CenterAndExpand"
                        >

                        <Label 
                            Text="Join free"
                            TextColor="Wheat"
                            FontSize="24"
                            Margin="30,30,0,0"
                            />
                    
                        <Label 
                            Text="Save your workouts,
                            progress, and stats"
                            TextColor="Wheat"
                            FontSize="24"
                            Margin="30,15,0,0"
                            />

                        <Label 
                            Text="Join free with Google"
                            TextColor="Wheat"
                            FontSize="18"
                            Margin="30,10,0,0"
                            />

                        <Label 
                            Text="Join free with Facebook"
                            TextColor="Wheat"
                            FontSize="18"
                            Margin="30,0,0,0"
                            />

                        <Label 
                            Text="Join free with Email"
                            TextColor="Wheat"
                            FontSize="18"
                            Margin="30,0,0,0"
                            />
                        
                        <Label 
                            Text="Join free with Apple"
                            TextColor="Wheat"
                            FontSize="18"
                            Margin="30,0,0,0"
                            />

                    </StackLayout>
                    
                </StackLayout>
            </ContentView>

            <ContentView 
                Padding="0, 0" 
                AbsoluteLayout.LayoutBounds="0,0,1,1" 
                AbsoluteLayout.LayoutFlags="All">



                <StackLayout 
                    VerticalOptions="End" 
                    Margin="20, 0, 20, 50"
                    >

                    <StackLayout>


                    </StackLayout>

                    <Button
                        Margin="0, 0, 0, 0"
                        HorizontalOptions="FillAndExpand"
                        HeightRequest="35"
                        CornerRadius="5"
                        Text="Create Account"
                        FontSize="14"
                        TextTransform="Uppercase"
                        BackgroundColor="#60B5F9"
                        />

                    <Button
                        Margin="0, 0, 0, 0"
                        HorizontalOptions="FillAndExpand"
                        HeightRequest="35"
                        CornerRadius="5"
                        Text="Login"
                        FontSize="14"
                        TextTransform="Uppercase"
                        BackgroundColor="#EAEAEA"
                        TextColor="Black"
                        />

                </StackLayout>
            </ContentView>

        </AbsoluteLayout>

    </ContentPage>



</CarouselPage>